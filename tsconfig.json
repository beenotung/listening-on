{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "incremental": true
  },
  "include": [
    "src/*.ts"
  ]
}